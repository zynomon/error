menu hshift 0
menu width 82

menu title .        # single dot, avoids printing "" and keeps title defined
include stdmenu.cfg

label live-@FLAVOUR@-english
    menu label ^Live (@FLAVOUR@) (English)
    menu default
    linux @LINUX@
    initrd @INITRD@
    append @APPEND_LIVE@ locales=en_US.UTF-8

label live-@FLAVOUR@-bangla
    menu label ^Live (@FLAVOUR@) (Bangla)
    linux @LINUX@
    initrd @INITRD@
    append @APPEND_LIVE@ locales=bn_BD.UTF-8

label installgui
    menu label ^Install
    linux /install/gtk/vmlinuz
    initrd /install/gtk/initrd.gz
    append video=vesa:ywrap,mtrr vga=788 @APPEND_INSTALL@ --- quiet

menu begin advanced
    menu title .    # again, single dot for submenu title
    include stdmenu.cfg

    label live-@FLAVOUR@-failsafe
        menu label ^Live (@FLAVOUR@ failsafe)
        linux @LINUX@
        initrd @INITRD@
        append @APPEND_LIVE_FAILSAFE@

    label install
        menu label ^Install (text mode)
        linux /install/vmlinuz
        initrd /install/initrd.gz
        append vga=788 @APPEND_INSTALL@ --- quiet

    label hdt
        menu label ^Hardware Detection Tool (HDT)
        com32 hdt.c32

    label memtest
        menu label ^Memory Diagnostic Tool (memtest86+)
        linux /live/memtest

    label mainmenu
        menu label ^Back..
        menu exit
menu end
